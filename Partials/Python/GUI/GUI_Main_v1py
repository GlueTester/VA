    def open_input_dialog_event(self):
        dialog = customtkinter.CTkInputDialog(text="Type in an EE number:", title="EE number to search for")
        print("InputDialog:", dialog.get_input())

    def change_appearance_mode_event(self, new_appearance_mode: str):
        customtkinter.set_appearance_mode(new_appearance_mode)

    def change_scaling_event(self, new_scaling: str):
        new_scaling_float = int(new_scaling.replace("%", "")) / 100
        customtkinter.set_widget_scaling(new_scaling_float)

    def sidebar_button_event(self):
        print("sidebar_button click")

    def return_pressed(self, event):
        self.searchclick()


    def searchclick(self):
        self.main_button_1.configure(state="disabled", text="Searching")
        searchfieldinput = self.entry.get()
        Hostname = GUI_functions.EEtoHostname(searchfieldinput)
        if Hostname != "None":
            self.logbox.insert('end', f"Searched for {searchfieldinput} - Found: {Hostname} \n")
            self.HostnameText.configure(text=Hostname)
            #self.HostnameText.insert(text=Hostname)
            
        else :
            self.logbox.insert('end', f"Searched for {searchfieldinput} - No Machine Found \n")
        self.main_button_1.configure(state="enabled", text="Search")
        #print(f"{idk}")
        pingreply = GUI_functions.ping(Hostname)
        #self.sidebar_info.delete("0.0", "end")  # delete all text
        
        #self.sidebar_info.insert("0.0", f"{pingreply}")
        #switch.text=(f"{pingreply}")

        #scrollable_frame.insert('end', f"{pingreply} \n")
        #self.scrollable_frame = customtkinter.CTkScrollableFrame(self, label_text="Custom Search Options")

if __name__ == "__main__":
