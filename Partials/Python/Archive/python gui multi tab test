import tkinter as tk
from tkinter import ttk

root = tk.Tk()
root.geometry("500x500")

# Create a Notebook widget
notebook = ttk.Notebook(root)
notebook.pack(fill='both',expand=True)

# Create the first tab
tab1 = ttk.Frame(notebook)
notebook.add(tab1, text='Tab 1')

# Create the bar graph in the firsttab

# You can use a library like matplotlib to create the graph
# For example:
import matplotlib.pyplot as plt

# Dummy data for the bar graph
total_storage = 1000
available_storage = 750

# Calculate the remaining storage percentage
remaining_percent = (available_storage / total_storage) * 100

# Create the bar graph
fig, ax = plt.subplots()
ax.bar(['Available Storage','Used Storage'], [available_storage,total_storage - available_storage])
ax.set_ylabel('Storage (GB)')
ax.set_title('Remote NAS Storage')
ax.text(0, available_storage + 50,f'{remaining_percent}% remaining')

# Add the graph to the first tab
canvas = plt.gcf().canvas
canvas.draw()
tkagg = canvas.switch_backends(tkagg)
canvas_widget = tkagg.get_tk_widget()
canvas_widget.pack(fill='both',expand=True)

# Create the second tab
tab2 = ttk.Frame(notebook)
notebook.add(tab2, text='Tab 2')

root.mainloop()